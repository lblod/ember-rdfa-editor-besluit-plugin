{{#if this.showCard}}
  <AuCard @flex={{true}} @divided={{true}} @expandable={{true}} @shadow={{true}} @isOpenInitially={{true}} @size="small" as |c|>
    <c.header>
      <AuHeading @level="3" @skin="6">
        Besluit
      </AuHeading>
    </c.header>
    <c.content>
      <AuList @divider={{true}} class="au-u-margin-none">
      {{#unless this.hasTitle}}
        <AuList::Item>
          <AuButton {{on 'click' this.insertTitle}} @icon="plus-text" @iconAlignment="left" @skin="link-secondary">
            Voeg titel in
          </AuButton>
        </AuList::Item>
      {{/unless}}
      <AuList::Item>
        <AuButton {{on "click" this.insertArticle}} @icon="plus-text" @iconAlignment="left" @skin="link-secondary">
          Voeg artikel in
        </AuButton>
      </AuList::Item>
      {{#if this.articleElement}}
        <AuList::Item>
          <AuButton {{on 'click' this.deleteArticle}} @icon="bin" @iconAlignment="left" @skin="link-secondary">
            Artikel verwijderen
          </AuButton>
        </AuList::Item>
        <AuList::Item>
          <AuButton {{on 'click' this.moveUpArticle}} @icon="nav-up" @iconAlignment="left" @skin="link-secondary">
            Artikel naar boven verplaatsen
          </AuButton>
        </AuList::Item>
        <AuList::Item>
          <AuButton {{on 'click' this.moveDownArticle}} @icon="nav-down" @iconAlignment="left" @skin="link-secondary">
            Artikel naar beneden verplaatsen
          </AuButton>
        </AuList::Item>
      {{/if}}
      </AuList>
    </c.content>
  </AuCard>
{{/if}}
