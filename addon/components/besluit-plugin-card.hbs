{{#if this.showCard}}
  <AuCard @flex={{true}} @divided={{true}} @expandable={{true}} @shadow={{true}} @isOpenInitially={{true}} @size="small" as |c|>
    <c.header>
      <AuHeading @level="3" @skin="6">
        Besluit
      </AuHeading>
    </c.header>
    <c.content>
      {{#unless this.hasTitle}}
        <br />
        <AuButton {{on 'click' this.insertTitle}} @icon="plus-text" @iconAlignment="left" @skin="link-secondary">
          Voeg titel in
        </AuButton>
      {{/unless}}
      <AuButton {{on "click" this.insertArticle}} @icon="plus-text" @iconAlignment="left" @skin="link-secondary">
        Voeg artikel in
      </AuButton>
    </c.content>
  </AuCard>
{{/if}}

